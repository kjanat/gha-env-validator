{
  "name": "@kjanat/gha-env-validator",
  "version": "0.1.0",
  "description": "Type-safe GitHub Actions environment variable validation with IntelliSense support using Zod",
  "keywords": [
    "github-actions",
    "environment-variables",
    "validation",
    "typescript",
    "zod",
    "type-safe",
    "intellisense",
    "ci-cd"
  ],
  "homepage": "https://github.com/kjanat/gha-env-validator#readme",
  "bugs": {
    "url": "https://github.com/kjanat/gha-env-validator/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kjanat/gha-env-validator.git"
  },
  "license": "MIT",
  "author": "kjanat",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "bun build ./src/index.ts --target=node --outfile=dist/index.js --external zod && tsc --project tsconfig.build.json",
    "clean": "rm -rf dist",
    "docs:build": "vitepress build docs",
    "docs:dev": "vitepress dev docs",
    "docs:preview": "vitepress preview docs",
    "postinstall": "lefthook install",
    "lint": "biome check",
    "lint:fix": "biome check --write",
    "prepublishOnly": "bun run build && bun test",
    "test": "bun run build && bun test",
    "typecheck": "bunx tsgo --noEmit"
  },
  "dependencies": {
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.5",
    "@bun-security-scanner/osv": "^1.0.0",
    "@octokit/webhooks-types": "^7.6.1",
    "@types/bun": "^1.3.2",
    "@types/node": "^24.10.1",
    "@typescript/native-preview": "^7.0.0-dev.20251117.1",
    "dprint": "^0.50.2",
    "lefthook": "^2.0.4",
    "typedoc": "^0.28.14",
    "typedoc-plugin-markdown": "^4.9.0",
    "typescript": "^5.9.3",
    "vitepress": "^2.0.0-alpha.13"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
