{
  "name": "@kjanat/gha-env-validator-workspace",
  "private": true,
  "workspaces": [
    "packages/*",
    ".github/actions/*"
  ],
  "scripts": {
    "build": "bun run --filter @kjanat/gha-env-validator build",
    "build:actions": "bun run --filter './.github/actions/*' build",
    "build:all": "bun run build && bun run build:actions",
    "docs:build": "bun run --filter @kjanat/gha-env-validator docs:build",
    "docs:dev": "bun run --filter @kjanat/gha-env-validator docs:dev",
    "docs:preview": "bun run --filter @kjanat/gha-env-validator docs:preview",
    "format": "bun run --filter @kjanat/gha-env-validator format",
    "lint": "bun run --filter @kjanat/gha-env-validator lint",
    "lint:fix": "bun run --filter @kjanat/gha-env-validator lint:fix",
    "test": "bun run --filter @kjanat/gha-env-validator test",
    "typecheck": "bun run --filter @kjanat/gha-env-validator typecheck"
  }
}
