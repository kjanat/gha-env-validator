{
  "name": "@kjanat/gha-env-validator",
  "version": "0.2.0",
  "description": "Type-safe GitHub Actions environment variable validation with IntelliSense support using Zod",
  "keywords": [
    "ci-cd",
    "environment-variables",
    "github-actions",
    "intellisense",
    "type-safe",
    "typescript",
    "validation",
    "zod"
  ],
  "homepage": "https://kjanat.github.io/gha-env-validator/",
  "bugs": {
    "url": "https://github.com/kjanat/gha-env-validator/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kjanat/gha-env-validator.git"
  },
  "license": "MIT",
  "author": "kjanat",
  "type": "module",
  "exports": {
    ".": {
      "types": {
        "import": "./dist/index.d.mts",
        "require": "./dist/index.d.cts"
      },
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsdown",
    "build:actions": "cd .github/actions/setup-project && bun run build && cd ../codecov-upload && bun run build && cd ../validate-workflow-env && bun run build && cd ../build-matrix-summary && bun run build",
    "clean": "rm -rf dist",
    "dev": "tsdown --watch",
    "docs:build": "vitepress build docs",
    "docs:dev": "vitepress dev docs",
    "docs:preview": "vitepress preview docs",
    "format": "dprint fmt --config-discovery=false --config .dprint.jsonc --allow-no-files",
    "postinstall": "lefthook install",
    "lint": "biome check",
    "lint:fix": "biome check --write",
    "prepublishOnly": "bun run build && bun test",
    "test": "bun run build && bun test",
    "typecheck": "bunx tsgo --noEmit"
  },
  "dependencies": {
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.6",
    "@octokit/webhooks-types": "^7.6.1",
    "@types/bun": "^1.3.2",
    "@types/node": "^24.10.1",
    "@typescript/native-preview": "^7.0.0-dev.20251117.1",
    "dprint": "^0.50.2",
    "lefthook": "^2.0.4",
    "tsdown": "^0.16.5",
    "typedoc": "^0.28.14",
    "typedoc-plugin-markdown": "^4.9.0",
    "typescript": "^5.9.3",
    "vitepress": "^1.6.4"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
